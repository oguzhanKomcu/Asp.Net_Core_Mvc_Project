@model AppointmentCreateDTO
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-2">
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Create Address</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                     
                        <div class="form-group">
                            <label asp-for="Patient_Id">Patient Full Name</label>
                            <select asp-for="Patient_Id" class="form-control">
                                @foreach (var item in Model.PatientListVMs)
                                {
                                    <option value="@item.ID">@item.FirstName @item.LastName</option>
                                }
                            </select>
                            <span asp-validation-for="Patient_Id" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="Doctor_Id">Doctor Full Name</label>
                            <select asp-for="Doctor_Id" class="form-control">
                                @foreach (var item in Model.DoctorListVMs)
                                {
                                    <option value="@item.ID">@item.FirstName @item.LastName</option>
                                }
                            </select>
                            <span asp-validation-for="Doctor_Id" class="text-danger"></span>
                        </div>
                           <div class="form-group">
                            <label asp-for="Date"></label>
                            <input asp-for="Date" class="form-control" placeholder="Date" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Time"></label>
                            <input asp-for="Time" class="form-control" placeholder="Time" />
                            <span asp-validation-for="Time" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="Prescription"></label>
                            <input asp-for="Prescription" class="form-control" placeholder="Prescription" />
                            <span asp-validation-for="Prescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Reason"></label>
                            <input asp-for="Reason" class="form-control" placeholder="Reason" />
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn-success btn-sm float-end" value="Create" />
                        </div>

                    </form>
                </div>
                <div class="card-footer">
                    <a asp-action="List" class="btn-primary btn-sm float-end">Back To List</a>
                </div>
            </div>
        </div>
    </div>
</div>

